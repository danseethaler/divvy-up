{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": ["eslint:recommended"],
    "plugins": ["node"],
    "rules": {
        "no-console": 0,
        "no-debugger": 0,
        "no-undef": 0,
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "node/exports-style": ["error", "module.exports"]
    }
}
